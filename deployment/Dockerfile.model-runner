# Base image with CUDA support
FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu22.04

# System dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt \
    && pip3 install llama-cpp-python-cuda onnxruntime-gpu transformers accelerate

# Install additional dependencies for model running
RUN pip3 install docker-model-runner 'dagger-io[local-models]'

# Copy project files
COPY . .

# Set environment variables
ENV OPENAI_BASE_URL=http://model-runner.docker.internal/engines/llama.cpp/v1/
ENV OPENAI_DISABLE_STREAMING=true
ENV OPENAI_MODEL=index.docker.io/ai/qwen2.5:7B-F16

# Expose ports
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the model server
CMD ["python3", "-m", "uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
